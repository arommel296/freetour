<body class="mt-5" style="padding-top: 5em;">
    <div class="container">
        <div class="row gy-4">
            <div class="col-md-6">
                <h2>{{ reserva.tour.ruta.nombre }}</h2>
                <img src="{{ asset('fotos/' ~ reserva.tour.ruta.foto) }}" alt="{{ reserva.tour.ruta.nombre }}"
                    class="img-fluid">
            </div>
            <div class="col-md-6 d-flex align-items-center justify-content-center">
                {{ form_start(form, {'attr': {'class': 'php-email-form'}}) }}
                <div class="row gy-4">
                    <div class="col-md-6">
                        <label>Nota de la Ruta</label>
                        {{ form_row(form.notaRuta, {'attr': {'class': 'form-control', 'placeholder': 'Nota Ruta', 'required': 'required'}})
                        }}
                        <p class="clasificacion form-control d-flex justify-content-end" style="direction: rtl;">
                            <input id="radio1R" type="radio" name="estrellasR" value="1">
                            <label for="radio1R">★</label>
                            <input id="radio2R" type="radio" name="estrellasR" value="2">
                            <label for="radio2R">★</label>
                            <input id="radio3R" type="radio" name="estrellasR" value="3">
                            <label for="radio3R">★</label>
                            <input id="radio4R" type="radio" name="estrellasR" value="4">
                            <label for="radio4R">★</label>
                            <input id="radio5R" type="radio" name="estrellasR" value="5">
                            <label for="radio5R">★</label>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <label>Nota del Guía</label>
                        {{ form_row(form.notaGuia, {'attr': {'class': 'form-control', 'placeholder': 'Nota Guía', 'required': 'required'}})
                        }}
                        <p class="clasificacion form-control d-flex justify-content-end" style="direction: rtl;">
                            <input id="radio1G" type="radio" name="estrellasG" value="1">
                            <label for="radio1G">★</label>
                            <input id="radio2G" type="radio" name="estrellasG" value="2">
                            <label for="radio2G">★</label>
                            <input id="radio3G" type="radio" name="estrellasG" value="3">
                            <label for="radio3G">★</label>
                            <input id="radio4G" type="radio" name="estrellasG" value="4">
                            <label for="radio4G">★</label>
                            <input id="radio5G" type="radio" name="estrellasG" value="5">
                            <label for="radio5G">★</label>
                        </p>
                    </div>
                    <div class="col-md-12">
                        {{ form_row(form.comentario, {'attr': {'class': 'form-control', 'rows': '6', 'placeholder': 'Comentarios', 'required': 'required'}})
                        }}
                    </div>
                    <div>
                        {{ form_errors(form) }}
                    </div>
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-primary" style="background-color: #e84545;">Enviar valoración</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</body>


