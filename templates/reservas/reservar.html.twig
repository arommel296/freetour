<body>

  <main id="main">
    {% for message in app.flashes('error') %}
    <div class="alert alert-danger">
      {{ message }}
    </div>
    {% endfor %}
    <section id="portfolio-details" class="portfolio-details">

      <div class="container aos-init aos-animate" data-aos="fade-up">

        <div class="portfolio-details-slider swiper swiper-initialized swiper-horizontal swiper-pointer-events">
          <template class="swiper-config">
            {
            "loop": true,
            "speed" : 600,
            "autoplay": {
            "delay": 5000
            },
            "slidesPerView": "auto",
            "navigation": {
            "nextEl": ".swiper-button-next",
            "prevEl": ".swiper-button-prev"
            }
            }
          </template>
          <div class="swiper-wrapper align-items-center" id="swiper-wrapper-5f4bb6189e17f933" aria-live="off"
            style="transform: translate3d(-7488px, 0px, 0px); transition-duration: 0ms;">

            {% for item in items %}
            {% if loop.index == 0 %}
            <div class="swiper-slide swiper-slide-active" data-swiper-slide-index="{{ loop.index0 }}" role="group"
              aria-label="{{ loop.index }} / {{ items|length }}">
              <img src="{{ asset('fotos/' ~ item.foto) }}" alt="">
            </div>
            {% endif %}
            {% if loop.index == 1 %}
            <div class="swiper-slide swiper-slide-next" data-swiper-slide-index="{{ loop.index0 }}" role="group"
              aria-label="{{ loop.index }} / {{ items|length }}">
              <img src="{{ asset('fotos/' ~ item.foto) }}" alt="">
            </div>
            {% endif %}
            {% if items|length >= 3 %}
            {% if loop.index == items|length %}
            <div class="swiper-slide swiper-slide-prev" data-swiper-slide-index="{{ loop.index0 }}" role="group"
              aria-label="{{ loop.index }} / {{ items|length }}">
              <img src="{{ asset('fotos/' ~ item.foto) }}" alt="">
            </div>
            {% endif %}
            {% endif %}

            <div class="swiper-slide" data-swiper-slide-index="{{ loop.index0 }}" role="group"
              aria-label="{{ loop.index }} / {{ items|length }}">
              <img src="{{ asset('fotos/' ~ item.foto) }}" alt="">
            </div>
            {% endfor %}



          </div>
          <div class="swiper-button-prev" tabindex="0" role="button" aria-label="Previous slide"
            aria-controls="swiper-wrapper-5f4bb6189e17f933"></div>
          <div class="swiper-button-next" tabindex="0" role="button" aria-label="Next slide"
            aria-controls="swiper-wrapper-5f4bb6189e17f933"></div>
          <span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
        </div>

        <div class="row justify-content-between gy-4 mt-4">

          <div class="col-lg-8 aos-init aos-animate" data-aos="fade-up">
            <div class="portfolio-description">
